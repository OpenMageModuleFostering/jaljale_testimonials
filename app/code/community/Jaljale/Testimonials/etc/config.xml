<?xml version="1.0"?>
<config>
  <modules>
    <Jaljale_Testimonials>
      <version>0.1.0</version>
    </Jaljale_Testimonials>
  </modules>
  <frontend>
    <routers>
      <testimonials>
        <use>standard</use>
          <args>
            <module>Jaljale_Testimonials</module>
            <frontName>testimonials</frontName>
          </args>
      </testimonials>
    </routers>
	<layout>
	  <updates>
		<testimonials>
		  <file>testimonials.xml</file>
		</testimonials>
	  </updates>
	</layout>
  </frontend>
  <global>
    <helpers>
      <testimonials>
        <class>Jaljale_Testimonials_Helper</class>
      </testimonials>
    </helpers>
	<blocks>
	  <testimonials>
		<class>Jaljale_Testimonials_Block</class>
	  </testimonials>
	</blocks>
	<models>
	  <testimonials>
		<class>Jaljale_Testimonials_Model</class>
		<resourceModel>testimonials_mysql4</resourceModel>
	  </testimonials>
	  <testimonials_mysql4>
		<class>Jaljale_Testimonials_Model_Mysql4</class>
		<entities>		  
			  <testimonial>
				<table>testimonial</table>
			  </testimonial>
        </entities>
	  </testimonials_mysql4>
	</models>
	<resources>
	  <testimonials_setup>
		<setup>
		  <module>Jaljale_Testimonials</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </testimonials_setup>
	  <testimonials_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </testimonials_write>
	  <testimonials_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </testimonials_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <testimonials>
	    <use>admin</use>
		<args>
		  <module>Jaljale_Testimonials</module>
		  <frontName>admin_testimonials</frontName>
		</args>
	  </testimonials>
	</routers>
  </admin>
  <adminhtml>
	<menu>
		<jaljale>
			<children>
			  <testimonial module="testimonials">
			    <title>Manage Testimonial</title>
				<sort_order>0</sort_order>
				<action>admin_testimonials/adminhtml_testimonial</action>
			  </testimonial>
			</children>
		</jaljale>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<testimonials translate="title" module="testimonials">
			  <title>Testimonials</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <testimonialsbackend translate="title">
			<title>Backend Page Title</title>
		  </testimonialsbackend>
		  <testimonial translate="title">
			<title>Manage Testimonial</title>
			<sort_order>0</sort_order>
		  </testimonial>
			  </children>
			</testimonials>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<testimonials>
		  <file>testimonials.xml</file>
		</testimonials>
	  </updates>
	</layout>
  </adminhtml>
</config> 